@model IEnumerable<Issue>


    <div class="container p-3">
        <div class="row pt-4">
            <div class="col -6">
                <h2 class="text-primary">Issues</h2>
            </div>
            <div class="col -6 text-right">
                <a asp-controller="Issue" asp-action="Create" class="btn btn-primary">Create New Issue</a>
            </div>
        </div>

        <br /><br />

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style=" width:100%">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Creator</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="50%">@obj.Title</td>
                            <td width="30%">@obj.Creator</td>
                            <td width="20%" class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Issue" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-outline-primary">Edit</a>
                                    <a asp-controller="Issue" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-outline-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No issues exist</p>
        }
    </div>